{
  "version": 2,
  "builds": [
    { 
      "src": "api/**/*.js", 
      "use": "@vercel/node",
      "config": { "maxDuration": 60 }
    },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/translate", "dest": "/api/translate/index.js" },
    { "src": "/api/describeImage", "dest": "/api/describeImage/index.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}